{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "$/*": ["./*"]
    },
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "incremental": true
  },
  "include": ["**/*.ts", "scripts/*.js", ".eslintrc.js", "api/members/_memberId@string"],
  "exclude": ["node_modules"]
}
